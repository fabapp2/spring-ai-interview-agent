{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "id",
    "type"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "NanoID of the topic, used for stable reference"
    },
    "type": {
      "type": "string",
      "description": "The type of the topic, either aligned to a resume section or a narrative element",
      "enum": [
        "basics",
        "work",
        "volunteer",
        "education",
        "projects",
        "awards",
        "certificates",
        "publications",
        "skills",
        "languages",
        "interests",
        "references",
        "gap",
        "career_transition",
        "freelance_period",
        "timeline_arc",
        "role",
        "narrative"
      ]
    },
    "reference": {
      "type": "object",
      "description": "Reference to resume item(s) or time period for this topic",
      "properties": {
        "resumeItemId": {
          "type": "string"
        },
        "spans": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "startDate": {
          "type": "string",
          "pattern": "^[1-2][0-9]{3}(-[0-1][0-9])?$",
          "description": "Optional start date in YYYY or YYYY-MM format"
        },
        "endDate": {
          "type": "string",
          "pattern": "^[1-2][0-9]{3}(-[0-1][0-9])?$",
          "description": "Optional end date in YYYY or YYYY-MM format"
        },
        "resumeItemBeforeId": {
          "type": "string"
        },
        "resumeItemAfterId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "gapType": {
      "type": "string",
      "enum": [
        "time",
        "timeline_boundary"
      ],
      "description": "Required if type is 'gap'; specifies the type of gap."
    },
    "reason": {
      "type": "string",
      "description": "Human-readable explanation for the existence of this topic"
    },
    "reasonMeta": {
      "type": "object",
      "description": "Machine-readable structured metadata about topic creation",
      "properties": {
        "detectedBy": {
          "type": "string"
        },
        "gapDurationInMonths": {
          "type": "integer"
        },
        "missingSectionCandidates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "patternType": {
          "type": "string"
        },
        "confidenceScore": {
          "type": "number"
        },
        "relatedResumeItems": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    },
    "priorityScore": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "Priority score from 0 to 100"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "description": "Priority label derived from priorityScore"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}