{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Structure for planning career data gathering interviews",
  "properties": {
    "career_data_id": {
      "type": "string",
      "description": "Foreign key reference to the id of the career data document"
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "reference", "threads"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "work_experience",
              "volunteer_work",
              "education",
              "project",
              "award",
              "certificate",
              "publication",
              "skill_area",
              "language",
              "interest",
              "reference",
              "gap",
              "role"
            ]
          },
          "reference": {
            "type": "object",
            "properties": {
              "section": {
                "type": "string",
                "enum": [
                  "work",
                  "volunteer",
                  "education",
                  "awards",
                  "certificates",
                  "publications",
                  "skills",
                  "languages",
                  "interests",
                  "references",
                  "projects"
                ]
              },
              "identifier": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "startDate": {
                    "type": "string",
                    "pattern": "^[1-2][0-9]{3}-[0-1][0-9]$"
                  },
                  "date": {
                    "type": "string",
                    "pattern": "^[1-2][0-9]{3}-[0-1][0-9]$"
                  }
                }
              }
            }
          },
          "threads": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "type", "focus", "status"],
              "properties": {
                "id": { "type": "string" },
                "type": {
                  "type": "string",
                  "enum": [
                    "core_details",
                    "achievements",
                    "responsibilities",
                    "skills_used",
                    "team_context",
                    "challenges",
                    "transition",
                    "impact",
                    "learning",
                    "collaboration",
                    "technical_depth",
                    "project_specifics",
                    "certification_details",
                    "publication_impact",
                    "skill_application",
                    "language_usage",
                    "interest_relevance"
                  ]
                },
                "focus": { "type": "string" },
                "duration": {
                  "type": "integer",
                  "minimum": 1
                },
                "actual_duration": {
                  "type": "integer",
                  "minimum": 0
                },
                "status": {
                  "type": "string",
                  "enum": ["pending", "in_progress", "completed", "skipped"]
                },
                "related_threads": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  },
  "required": ["topics"]
}
